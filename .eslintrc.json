{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "linebreak-style": "off",
        //Only needed for slate code, spreading is an anti pattern and not done anywhere else
        "react/jsx-props-no-spreading": "off",
        "react/prop-types": "off"
    }
}
